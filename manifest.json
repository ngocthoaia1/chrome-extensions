{
  "name": "Chrome utils extensions",
  "short_name": "Chrome utils extensions",
  "version": "1.1",
  "description": "This extensions have some utils support for chrome browser. This extensions developed by NNT.",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "html/popup.html"
  },
  "icons": { "16": "images/icon-16.png",
           "48": "images/icon-48.png",
          "128": "images/icon-128.png" },
  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"],
      "js": [
        "js/jquery-2.1.3.js",
        "js/hide-iframe.js",
        "js/hide-elements.js"
      ],
      "css": ["css/hide-iframe.css"]
    },
    {
      "matches": [
        "https://github.com/*",
        "http://github.com/*"],
      "js": ["js/github.js"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "manifest_version": 2
}
